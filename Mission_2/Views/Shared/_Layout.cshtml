<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Adds site icon on tab -->
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico">

    <!-- Imports bootstrap and custom css -->
    <!-- A TA helped me and told me to use this link to Bootstrap instead of my own local files since for some reason Bootstrap would not load correctly with them -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    @*<link href="lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="@Url.Content("~/css/custom.css")" rel="stylesheet" />
    <script src="@Url.Content("~/lib/jquery/jquery-3.6.0.min.js")"></script>
</head>

<body>

    <nav>
        <a asp-controller="Default" asp-action="Index" class="btn">Home</a>
        <a asp-controller="Default" asp-action="GradeCalculator" class="btn">Grade Calculator</a>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="@Url.Content("~/lib/bootstrap/js/bootstrap.min.js")"></script>
</body>

</html>
